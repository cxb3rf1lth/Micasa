# ==============================================
# MICASA CLIENT ENVIRONMENT CONFIGURATION
# ==============================================
# IMPORTANT: Copy this file to .env and update values for your environment
# Variables must be prefixed with VITE_ to be available in the client

# ----------------------------------------------
# API CONFIGURATION
# ----------------------------------------------
# Backend API URL
# For development: http://localhost:5000
# For production: https://api.yourdomain.com
VITE_API_URL=http://localhost:5000

# ----------------------------------------------
# SOCKET.IO CONFIGURATION
# ----------------------------------------------
# Socket.IO server URL (usually same as API URL)
# For development: http://localhost:5000
# For production: https://api.yourdomain.com
VITE_SOCKET_URL=http://localhost:5000

# ----------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------
# Application name (displayed in UI)
VITE_APP_NAME=Micasa

# Application version (optional)
VITE_APP_VERSION=1.0.0

# ----------------------------------------------
# FEATURE FLAGS (Optional)
# ----------------------------------------------
# Enable debug mode (shows extra logging in console)
# VITE_DEBUG_MODE=false

# Enable Socket.IO debug logging
# VITE_SOCKET_DEBUG=false
